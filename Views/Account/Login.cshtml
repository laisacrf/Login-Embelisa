@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Embelisa</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&family=Playfair+Display:wght@700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/embelisa-home.css">
</head>

<body>
    <div class="container">
        <div class="logo" style="margin-bottom: 25px;">
            <div class="logo-icone"><i class="fas fa-home"></i></div>
            <h1>Embelisa</h1>
        </div>

        <h2 class="subtitulo">Login</h2>
        <p class="descricao">Acesse sua conta para continuar</p>

        <div class="card card-form">
            <form method="post" class="formulario">
                <label>Email</label>
                <input type="email" name="email" placeholder="Digite seu e-mail" required>

                <label>Senha</label>
                <input type="password" name="senha" placeholder="Digite sua senha" required>

                <button type="submit" class="btn btn-rosa">Entrar</button>
            </form>
        </div>

        <p class="texto-link">
            Não tem conta? <a href="/Account/Register" class="link-rosa">Cadastre-se</a>
        </p>
        <p class="texto-voltar">
            <a href="/" class="link-voltar">⬅ Voltar à tela inicial</a>
        </p>
    </div>

    <script src="https://kit.fontawesome.com/a2e0ad5e65.js" crossorigin="anonymous"></script>
</body>
</html>
