@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastro - Embelisa</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&family=Playfair+Display:wght@700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/embelisa-home.css">
</head>

<body>
    <div class="container">
        <div class="logo" style="margin-bottom: 25px;">
            <div class="logo-icone"><i class="fas fa-home"></i></div>
            <h1>Embelisa</h1>
        </div>

        <h2 class="subtitulo">Cadastro</h2>
        <p class="descricao">Preencha seus dados para criar sua conta</p>

        <div class="card card-form">
            <form method="post" class="formulario">
                <label>Nome</label>
                <input type="text" name="Nome" placeholder="Seu nome completo" required>

                <label>Email</label>
                <input type="email" name="Email" placeholder="Seu e-mail" required>

                <label>Senha</label>
                <input type="password" name="Senha" placeholder="Crie uma senha" required>

                <label>Telefone</label>
                <input type="text" name="Telefone" placeholder="(00) 00000-0000">

                <label>Número do Apartamento</label>
                <input type="text" name="NumeroApartamento" placeholder="Ex: 101">

                <!-- Campo 'Tipo' removido -->

                <button type="submit" class="btn btn-rosa">Cadastrar</button>
            </form>
        </div>

        <p class="texto-link">
            Já tem conta? <a href="/Account/Login" class="link-rosa">Faça login</a>
        </p>
        <p class="texto-voltar">
            <a href="/" class="link-voltar">⬅ Voltar à tela inicial</a>
        </p>
    </div>

    <script src="https://kit.fontawesome.com/a2e0ad5e65.js" crossorigin="anonymous"></script>
</body>
</html>
